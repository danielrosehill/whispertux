#!/bin/bash
# WhisperTux Launcher Script
cd "/home/daniel/programs/speech-voice/apps/forks/whispertux/app"

# Check if virtual environment exists
if [ -f "/home/daniel/programs/speech-voice/apps/forks/whispertux/app/venv/bin/python" ]; then
    "/home/daniel/programs/speech-voice/apps/forks/whispertux/app/venv/bin/python" main.py "$@"
else
    echo "Error: Virtual environment not found. Please run setup.py first."
    echo "python3 setup.py"
    exit 1
fi
